{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "pruneStaleBranches": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchFileNames": [
        "(^|/)pyproject\\.toml$",
        "(^|/)requirements(\\.txt)?$",
        "(^|/)uv\\.lock$"
      ],
      "groupName": "python dependency files (pyproject, requirements, uv.lock)",
      "groupSlug": "python-deps-all"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "enabled": false
    }
  ]
}
